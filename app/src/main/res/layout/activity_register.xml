<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.slogan.wristband.wristband.activity.RegisterActivity">

    <include layout="@layout/include_title_bar"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="输入你的手机号"
        android:textColor="#FF333333"
        android:textSize="24sp"
        android:layout_marginTop="46dp"
        android:layout_gravity="center_horizontal"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="48dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+86"
            />
        <EditText
            android:id="@+id/et_phone_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:lines="1"
            android:inputType="number"
            android:textColor="#333333"
            android:textSize="16sp"
            android:hint="输入11位手机号"
            android:textColorHint="#c6c6c6"
            android:paddingLeft="12dp"
            />

        <ImageView
            android:id="@+id/iv_delete_phone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/back"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FF2883ED"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />
    <TextView
        android:id="@+id/tv_gain_sms"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/shape_check_code_unselect_bg"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:text="获取短信验证码"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:enabled="false"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/iv_choose_agreement"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册即表示您同意并遵守华卓的"
            android:textColor="#999999"
            android:textSize="10sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户协议及隐私政策"
            android:layout_marginLeft="2dp"
            android:textColor="@color/main_color"
            android:textSize="10sp"
            />

    </LinearLayout>
</LinearLayout>
